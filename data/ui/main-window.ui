<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="2.20"/>
  <!-- interface-naming-policy project-wide -->
  <object class="GtkWindow" id="mainwindow">
    <property name="title" translatable="yes">PiTiVi</property>
    <signal name="configure-event" handler="_configureCb" swapped="no"/>
    <signal name="delete-event" handler="_deleteCb" swapped="no"/>
    <child>
      <object class="GtkVBox" id="mainvbox">
        <property name="visible">True</property>
        <child>
          <object class="GtkMenuBar" id="menubar1">
            <property name="visible">True</property>
            <child>
              <object class="GtkMenuItem" id="filemenu">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
                <property name="label" translatable="yes">_Fichier</property>
                <property name="use_underline">True</property>
                <child type="submenu">
                  <object class="GtkMenu" id="menu1">
                    <property name="visible">True</property>
                    <child>
                      <object class="GtkImageMenuItem" id="newprojectitem">
                        <property name="visible">True</property>
                        <property name="related_action">NewProject</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImageMenuItem" id="openprojectitem">
                        <property name="visible">True</property>
                        <property name="related_action">OpenProject</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImageMenuItem" id="saveprojectitem">
                        <property name="visible">True</property>
                        <property name="related_action">SaveProject</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImageMenuItem" id="saveprojectasitem">
                        <property name="visible">True</property>
                        <property name="related_action">SaveProjectAs</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImageMenuItem" id="revertitem">
                        <property name="visible">True</property>
                        <property name="related_action">RevertToSavedProject</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparatorMenuItem" id="separatormenuitem1">
                        <property name="visible">True</property>
                        <property name="use_action_appearance">False</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImageMenuItem" id="quititem">
                        <property name="label">gtk-quit</property>
                        <property name="visible">True</property>
                        <property name="related_action">Quit</property>
                        <property name="use_action_appearance">False</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkMenuItem" id="editmenu">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
                <property name="label" translatable="yes">É_dition</property>
                <property name="use_underline">True</property>
                <child type="submenu">
                  <object class="GtkMenu" id="menu2">
                    <property name="visible">True</property>
                    <child>
                      <object class="GtkImageMenuItem" id="undoitem">
                        <property name="visible">True</property>
                        <property name="related_action">Undo</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImageMenuItem" id="redoitem">
                        <property name="visible">True</property>
                        <property name="related_action">Redo</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImageMenuItem" id="prefitem">
                        <property name="visible">True</property>
                        <property name="related_action">Preferences</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkMenuItem" id="viewmenu">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
                <property name="label" translatable="yes">_Affichage</property>
                <property name="use_underline">True</property>
                <child type="submenu">
                  <object class="GtkMenu" id="menu4">
                    <property name="visible">True</property>
                    <child>
                      <object class="GtkCheckMenuItem" id="showmaintoolbar">
                        <property name="visible">True</property>
                        <property name="related_action">ShowHideMainToolbar</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckMenuItem" id="showtimeline">
                        <property name="visible">True</property>
                        <property name="related_action">ShowHideTimelineToolbar</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSeparatorMenuItem" id="viewseperator">
                        <property name="visible">True</property>
                        <property name="use_action_appearance">False</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckMenuItem" id="fullscreenitem">
                        <property name="visible">True</property>
                        <property name="related_action">FullScreen</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkMenuItem" id="projectmenu">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
                <property name="label" translatable="yes">_Project</property>
                <property name="use_underline">True</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuItem" id="timelinemenu">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
                <property name="label" translatable="yes">_Timeline</property>
                <property name="use_underline">True</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuItem" id="Preview">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
                <property name="label" translatable="yes">Previe_w</property>
                <property name="use_underline">True</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuItem" id="helpmenu">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
                <property name="label" translatable="yes">Aid_e</property>
                <property name="use_underline">True</property>
                <child type="submenu">
                  <object class="GtkMenu" id="menu3">
                    <property name="visible">True</property>
                    <child>
                      <object class="GtkImageMenuItem" id="imagemenuitem10">
                        <property name="label">gtk-about</property>
                        <property name="visible">True</property>
                        <property name="use_action_appearance">False</property>
                        <property name="use_underline">True</property>
                        <property name="use_stock">True</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="position">0</property>
          </packing>
        </child>
        <child>
          <object class="GtkToolbar" id="toolbar1">
            <property name="visible">True</property>
            <child>
              <object class="GtkToolButton" id="toolbar-undo">
                <property name="visible">True</property>
                <property name="related_action">Undo</property>
                <property name="label" translatable="yes">toolbutton1</property>
                <property name="use_underline">True</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="homogeneous">True</property>
              </packing>
            </child>
            <child>
              <object class="GtkToolButton" id="toolbar-redo">
                <property name="visible">True</property>
                <property name="related_action">Redo</property>
                <property name="label" translatable="yes">toolbutton1</property>
                <property name="use_underline">True</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="homogeneous">True</property>
              </packing>
            </child>
            <child>
              <object class="GtkSeparatorToolItem" id="tool-separate1">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="homogeneous">True</property>
              </packing>
            </child>
            <child>
              <object class="GtkSeparatorToolItem" id="tool-separator-2">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="homogeneous">True</property>
              </packing>
            </child>
            <child>
              <object class="GtkToolButton" id="tool-save">
                <property name="visible">True</property>
                <property name="related_action">SaveProject</property>
                <property name="label" translatable="yes">toolbutton1</property>
                <property name="use_underline">True</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="homogeneous">True</property>
              </packing>
            </child>
            <child>
              <object class="GtkToolButton" id="tool-render">
                <property name="visible">True</property>
                <property name="related_action">RenderProject</property>
                <property name="label" translatable="yes">toolbutton1</property>
                <property name="use_underline">True</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="homogeneous">True</property>
              </packing>
            </child>
            <child>
              <object class="GtkSeparatorToolItem" id="tool-separator-3">
                <property name="visible">True</property>
                <property name="use_action_appearance">False</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="homogeneous">True</property>
              </packing>
            </child>
            <child>
              <object class="GtkToolButton" id="tool-fullscreen">
                <property name="visible">True</property>
                <property name="related_action">FullScreen</property>
                <property name="label" translatable="yes">toolbutton1</property>
                <property name="use_underline">True</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="homogeneous">True</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="position">1</property>
          </packing>
        </child>
        <child>
          <object class="GtkVPaned" id="vpaned">
            <property name="visible">True</property>
            <property name="can_focus">True</property>
            <child>
              <object class="GtkHPaned" id="mainhpaned">
                <property name="visible">True</property>
                <property name="can_focus">True</property>
                <child>
                  <object class="GtkHPaned" id="secondhpaned">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <child>
                      <placeholder/>
                    </child>
                    <child>
                      <placeholder/>
                    </child>
                  </object>
                  <packing>
                    <property name="resize">True</property>
                    <property name="shrink">True</property>
                  </packing>
                </child>
                <child>
                  <placeholder/>
                </child>
              </object>
              <packing>
                <property name="resize">True</property>
                <property name="shrink">False</property>
              </packing>
            </child>
            <child>
              <placeholder/>
            </child>
          </object>
          <packing>
            <property name="position">2</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkActionGroup" id="mainwindowactions">
    <child>
      <object class="GtkToggleAction" id="ShowHideMainToolbar">
        <property name="label" translatable="yes">Main Toolbar</property>
        <property name="short_label" translatable="yes">Main Toolbar</property>
        <property name="active">True</property>
      </object>
    </child>
    <child>
      <object class="GtkToggleAction" id="FullScreen">
        <property name="tooltip" translatable="yes">View the main window on the whole screen</property>
        <property name="stock_id">gtk-fullscreen</property>
      </object>
      <accelerator key="f"/>
    </child>
    <child>
      <object class="GtkAction" id="NewProject">
        <property name="label" translatable="yes">_Nouveau</property>
        <property name="short_label" translatable="yes">_Nouveau</property>
        <property name="tooltip" translatable="yes">Create a new project</property>
        <property name="stock_id">gtk-new</property>
        <signal name="activate" handler="_newProjectMenuCb" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="OpenProject">
        <property name="label" translatable="yes">_Ouvrir</property>
        <property name="short_label" translatable="yes">_Ouvrir</property>
        <property name="tooltip" translatable="yes">Open an existing project</property>
        <property name="stock_id">gtk-open</property>
        <signal name="activate" handler="_openProjectCb" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="SaveProject">
        <property name="label" translatable="yes">_Enregistrer</property>
        <property name="short_label" translatable="yes">_Enregistrer</property>
        <property name="tooltip" translatable="yes">Save the current project</property>
        <property name="stock_id">gtk-save</property>
        <signal name="activate" handler="_saveProjectCb" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="RevertToSavedProject">
        <property name="label" translatable="yes">_Rétablir</property>
        <property name="short_label" translatable="yes">_Rétablir</property>
        <property name="tooltip" translatable="yes">Reload the current project</property>
        <property name="stock_id">gtk-revert-to-saved</property>
        <signal name="activate" handler="_revertToSavedProjectCb" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="Quit">
        <property name="label" translatable="yes">_Quitter</property>
        <property name="short_label" translatable="yes">_Quitter</property>
        <property name="stock_id">gtk-quit</property>
        <signal name="activate" handler="_quitCb" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="SaveProjectAs">
        <property name="label" translatable="yes">Enregistrer _sous</property>
        <property name="short_label" translatable="yes">Enregistrer _sous</property>
        <property name="tooltip" translatable="yes">Save the current project with a different name</property>
        <property name="stock_id">gtk-save-as</property>
        <signal name="activate" handler="_saveProjectAsCb" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="Undo">
        <property name="label" translatable="yes">Undo</property>
        <property name="tooltip" translatable="yes">Undo the last operation</property>
        <property name="stock_id">gtk-undo</property>
        <signal name="activate" handler="_undoCb" swapped="no"/>
      </object>
      <accelerator key="z" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="Redo">
        <property name="label" translatable="yes">Redo</property>
        <property name="tooltip" translatable="yes">Redo the last undone operation</property>
        <property name="stock_id">gtk-redo</property>
        <signal name="activate" handler="_redoCb" swapped="no"/>
      </object>
      <accelerator key="y" modifiers="GDK_CONTROL_MASK"/>
    </child>
    <child>
      <object class="GtkAction" id="RenderProject">
        <property name="label" translatable="yes">Render project</property>
        <property name="tooltip" translatable="yes">Render project</property>
        <property name="stock_id">pitivi-render</property>
        <property name="is_important">True</property>
        <property name="sensitive">False</property>
        <signal name="activate" handler="_recordCb" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkAction" id="Preferences">
        <property name="tooltip" translatable="yes">Preferences</property>
        <property name="stock_id">gtk-preferences</property>
        <signal name="activate" handler="_prefsCb" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkToggleAction" id="ShowHideTimelineToolbar">
        <property name="label" translatable="yes">Timeline Toolbar</property>
        <property name="active">True</property>
        <signal name="activate" handler="_showHideTimelineToolbar" swapped="no"/>
      </object>
    </child>
  </object>
</interface>
